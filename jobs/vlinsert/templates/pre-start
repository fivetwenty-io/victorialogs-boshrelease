#!/bin/bash
set -e

echo "vminsert pre-start: preparing runtime environment..."

# Create run directories for bpm
mkdir -p /var/vcap/sys/run/vlinsert
chown -R vcap:vcap /var/vcap/sys/run/vlinsert

# Create log directory
mkdir -p /var/vcap/sys/log/vlinsert
chown -R vcap:vcap /var/vcap/sys/log/vlinsert

echo "vminsert pre-start configuration complete"
