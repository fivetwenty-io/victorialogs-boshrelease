#!/bin/bash
set -e

echo "vmselect pre-start: preparing runtime environment..."

# Create run directories for bpm
mkdir -p /var/vcap/sys/run/vlselect
chown -R vcap:vcap /var/vcap/sys/run/vlselect

# Create log directory
mkdir -p /var/vcap/sys/log/vlselect
chown -R vcap:vcap /var/vcap/sys/log/vlselect

echo "vmselect pre-start configuration complete"
